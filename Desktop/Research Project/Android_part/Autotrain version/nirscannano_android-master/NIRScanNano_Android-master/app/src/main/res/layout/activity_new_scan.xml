<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kstechnologies.NanoScan.NewScanActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dip8"
        android:layout_marginStart="@dimen/dip8"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingTop="20dp">

        <ProgressBar
            android:id="@+id/calProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>


        <android.support.v4.view.ViewPager

            android:id="@+id/view_pager"

            android:layout_width="fill_parent"

            android:layout_height="fill_parent" />

    </RelativeLayout>


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_graph_list"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingBottom="@dimen/dip8"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dip8">

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/kst_red"
            android:text="@string/scan"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/btn_blacklist"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_report"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@color/kst_red"
            android:text="@string/report"
            android:textColor="@color/white"
            android:layout_below="@+id/btn_blacklist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_blacklist"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:text="@string/addlist"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_emptylist"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:text="@string/emptylist"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/btn_scan"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>


